program pinumber
  implicit none
 
integer ::i,size
real, dimension(size)::pinumber

print*, "This program performs the calculation of pi number."

print*,"Introduce the amoung of terms "
 read*, size
sum(0) = 0
do i=0, size
pinumber(i) = pimnumber(i) + ((-1)**i)/(2*i+1)
end do

print*, "pi number=", pinumber(i)
 end program pinumber
